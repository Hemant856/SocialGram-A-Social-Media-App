<h1> 
        Home / <%= title %> 
</h1> 


<section id="feed-post"> 
        <h4>Posts</h4> 
     <% if(locals.user) {%>
        <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" id="" placeholder="Type here..." required cols="30" rows="3"></textarea>
         <input type="submit" value="Post"> 

        </form> 
     <% } %>
   <div id="posts-list-container">
       <ul>
            <% for(post of posts) { %>
                
             <%- include('_post')-%>

            <% } %>  
       </ul>
   </div>


</section>